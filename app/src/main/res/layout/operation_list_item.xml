<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/layout_round"
        android:elevation="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/iv_operation_type"
            android:layout_centerVertical="true"
            tools:src="@drawable/budget_change"
            android:layout_marginStart="16dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_1"
            android:textSize="18sp"
            android:textStyle="normal"
            android:layout_marginTop="16dp"
            android:textColor="@color/md_black"
            android:text="Amount: "
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/iv_operation_type"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_amount"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:textColor="@color/moneyChange"
            tools:text="$ 300"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@id/tv_1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_2"
            android:textSize="16sp"
            android:textStyle="normal"
            android:textColor="@color/md_black"
            android:text="Money from: "
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/iv_operation_type"
            android:layout_below="@id/tv_1"
            android:layout_marginTop="8dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_from"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/md_black"
            tools:text="Work"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@id/tv_2"
            android:layout_below="@id/tv_1"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_date"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/md_black"
            tools:text="10/01/2018"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/iv_operation_type"
            android:layout_below="@id/tv_2"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>